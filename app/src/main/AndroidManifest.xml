<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orangemarket.orangemarket">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SummerProject">
     
        <activity
            android:name=".ui.map.MapsActivity"
            android:exported="true"
            android:theme="@style/Theme.SummerProject.NoActionBar"/>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBVMEPY7L19d1-O9YtXwBJBSxYDC7dybD8" />

        <activity
            android:name=".ui.home.DetailActivity"
            android:exported="true"
            android:theme="@style/Theme.SummerProject.NoActionBar" />
        <activity
            android:name=".ui.home.AddArticleActivity"
            android:exported="true"
            android:theme="@style/Theme.SummerProject.NoActionBar" />
        <activity
            android:name=".ui.chatdetail.ChatRoomActivity"
            android:exported="true"
            android:theme="@style/Theme.SummerProject.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/Theme.SummerProject.NoActionBar" />
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/Theme.SummerProject.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.SummerProject.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>